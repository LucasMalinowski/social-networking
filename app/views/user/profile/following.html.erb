<div class="row">
  <% @following.each do |user| %>
    <div class="col-lg-4">
        <div class="card">
          <%= render('user_card', user: user) %>
        <div class="card-body">
          <%= link_to "Deixar de Seguir", user_unfollow_path(user), method: :delete, class: "btn btn-secondary"%> <br><br>
          Email:<p class="card-text text-muted"><%= user.email %></p>
          Telefone:<p class="card-text text-muted"><%= user.phone %></p>
        </div>
      </div>
    </div>
  <% end %>
  
</div>