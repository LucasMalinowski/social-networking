<div class="row">
  <% @potential_to_follow.each do |user| %>
    <div class="col-lg-4">
        <div class="card">
          <%= render('user_card', user: user) %>
        <div class="card-body">
          <%= link_to "Seguir", user_follow_path(user.id), method: :post, class: "col-3 btn btn-success"%> <br><br>
          Email:<p class="card-text text-muted"><%= user.email %></p>
          Telefone:<p class="card-text text-muted"><%= user.phone %></p>
        </div>
      </div>
    </div>
  <% end %>
  
</div>