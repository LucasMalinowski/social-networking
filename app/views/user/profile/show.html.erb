<div class="row">
  <div class="col-lg-6">
    <%= image_tag(current_user.avatar, class:"ui-w-100-forced ", style:"width: 150px; height: 150px; border-radius:10px;") %>
    <p></p>
    <div class="card">
      <h5 class="card-header"><%= current_user.name %></h5>
      <div class="card-body">
        Email:<p class="card-text text-muted"><%= current_user.email %></p>
        Telefone:<p class="card-text text-muted"><%= current_user.phone %></p>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="card">
      <div class="card-body">
        <%= form_with(model: [:user, @post], local: true) do |f|%>
          <%= render("user/profile/form_errors", record: @post) %>
            <div class="form-group">
              <label for="exampleInputEmail1">Texto</label>
              <%= f.text_area :body ,rows: 5, class: "form-control", placeholder: "Digite seu texto" %>
            </div>
            <button type="submit" class="btn btn-primary">Postar</button>
        <% end %>
      </div>
    </div>

    <% current_user.posts.each do |post| %>  
      <div class="card text-white bg-dark mb-3 mt-3">
        <div class="card-header"><%= post.user.name %></div>
          <div class="card-body">
          <small class="text-muted"> <%= l post.created_at, format: :short %></small>
          <p class="card-text"><%= post.body %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>