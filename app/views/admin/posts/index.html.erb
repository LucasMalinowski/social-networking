 <h4>Posts Criados</h4>
  <table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Texto</th>
      <th scope="col">Usuario </th>
      <th scope="col">Criado em</th> 
      
    </tr>
  </thead>
  <tbody>
  
     <% @posts.each do |post| %>
      <tr> 
        <th scope="row"><%= post.id %></th>
        <td id="testebd"><%= link_to post.body, admin_post_path(post), style: "color: rgb(255,255,255); text-decoration: underline;"%></td>
        <td scope="row"><%= post.user.name %></td>
        <td><%= post.created_at %></td>
        <!-- <td><%= link_to("Editar", edit_admin_post_path(post), class: "btn btn-warning btn-sm") %></td> -->
        <td><%= link_to("Deletar", admin_post_path(post), method: :delete, data: {confirm: "Deseja excluir o post?"},class: "btn btn-danger btn-sm") %></td>
      </tr>
    <% end %>
  </table>
    <%= link_to("Novo Post", user_profile_path, class: "btn btn-info mb-4") %>  

  </tbody>
